<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Inicio"
    android:background="@drawable/inicio_fondo">




        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="109dp"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_marginStart="54dp"
            android:layout_marginEnd="54dp"
            >

            <Button
                android:id="@+id/btn_instrucciones"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="100dp"
                android:background="@drawable/icono_instrucciones"
                style="?android:attr/buttonBarButtonStyle"/>

            <Button
                android:id="@+id/btn_perfil"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="100dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/icono_perfil" />

            <Button
                android:id="@+id/btn_preguntarjetas"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="100dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/icono_preguntarjeta" />

            <Button
                android:id="@+id/btn_ranking"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="100dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/icono_ranking" />

            <Button
                android:id="@+id/btn_volver"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="100dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/icono_volver" />


        </LinearLayout>




</LinearLayout>